if ($('#game_nav').length) {
	$('#game_nav').html("<%= escape_javascript(render("games/show")) %>");
	$('#game_nav').show();
	$('#discussion').hide();
  var width = document.documentElement.clientWidth;
  var height = document.documentElement.clientHeight;
  var pop_width = $('#game_nav').width();
  var pop_height = $('#game_nav').height();
  $('#game_nav').css({"position":"absolute", "top":height/2-pop_height/2,"left":width/2-pop_width/2});
  $('#close_game_nav').show();
  $('#close_game_nav').position({of:$('#game_nav'), my:'left bottom', at:'right top', offset:'-21 34'});
  $('#close_game_nav').click(function(){
		$('#game_nav').hide();
    $('#close_game_nav').hide();
	});
	$('#side_bar').hide();
} else {
	$('#game_area').html("<%= escape_javascript(render("games/the_game")) %>");
}

if ($('#comment_box').length) {
	$('#comment_box').html("<%= escape_javascript(render("games/game_comments")) %>");
}
prepare_game();
window.waiting_score = false;
window.board_game_id = "<%= @game.id %>"
init_game();
init_review();

