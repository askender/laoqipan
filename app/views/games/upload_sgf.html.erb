<div class="user_form show">
	<%= render "shared/errors_messages" %>
	
	<%= form_for @game do |f| %>
		<div class="field" id="sgf_prompt">
			<%= t :do_you_have_sgf %><br/>
			<%= f.radio_button :status, 1, :checked => true %>
			<%= t(".have") %><br>
			<%= f.radio_button :status, 0, :checked => false %>
			<%= t(".have_not") %>
		</div>
	
	  <div class="field" id="draw_on_board">
			<%= t :if_no_sgf %>
		</div>
		
		<div class="field" id="draw_from_sgf">
			<%= t :paste_sgf_here %><br/>
			<%= f.text_area :sgf %>
		</div>

		<div class="field" id="parse_error">
			<%= t :parse_sgf_error %>
		</div>

		<div class="field" id="parse_result">
			<%= t ".parse_result" %>
			<ul>
				<li><%= t ".black" %><span id="black"></span></li>
				<li><%= t ".white" %><span id="white"></span></li>
				<li><%= t ".event" %><span id="event"></span></li>
				<li><%= t ".date" %><span id="date"></span></li>
				<li><%= t ".total_step" %><span id="total_step"></span></li>
				<li><%= t ".result" %><span id="result"></span></li>
			</ul>
		</div>
		
		<div class="field" id="sgf_name">
			<%= f.label :name, t(".sgf_name") %><br>
			<%= f.text_field :name %>
		</div>

		<div class="field" id="sgf_submit">
			<%= f.submit t(:next_step) %>
		</div>
	<% end %>
	
</div>
