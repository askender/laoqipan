<div class="fixed show">
	<div>
	<%= render "shared/errors_messages" %>
	<h3><%= t ".new_user" %></h3>
	<%= form_for @user, :html => { :multipart => true } do |f| %>
	  <div class="field">
	  	<%= f.label :name, t(".username") %><br>
			<%= f.text_field :name, :autocomplete => :off %>
	  </div>

		<div class="field">
			<%= f.label :email, t(".email") %><br>
			<%= f.text_field :email, :autocomplete => :off %>
		</div>

		<div class="field">
			<%= f.label :password, t(".password") %><br>
			<%= f.password_field :password %>
		</div>

		<div class="field">
			<%= f.label :password_confirmation, t(".confirm") %><br>
			<%= f.password_field :password_confirmation %>
		</div>

		<div class="field">
			<%= f.radio_button :open_for_play, "true" %>
			<%= f.label :open_for_play, t(".open_for_play") %>
			<%= f.radio_button :open_for_play, "false" %>
			<%= f.label :open_for_play, t(".close_for_play") %>
		</div>

		<div class="field">
			<%= f.label t(:upload_image) %><br/>
			<%= f.file_field :avatar %>
			<p class="notice"><%= t(:image_notice) %></p>
		</div>
		
		<div class="field">
			<%= f.submit t(".create") %>
		</div>
	<% end %>
	</div>
</div>