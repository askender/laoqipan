<%= render "shared/errors_messages" %>

<%= form_for @user, :html => { :multipart => true, :class => "nice" } do |f| %>

<%= f.label :name, t(".username") %>
<%= f.text_field :name, :class => 'input-text' %>

<%= f.label :email, t(".email") %>
<%= f.text_field :email, :class => 'input-text' %>

<%= f.label :password, t(".password") %>
<%= f.password_field :password, :class => 'input-text' %>

<%= f.label :password_confirmation, t(".confirm") %>
<%= f.password_field :password_confirmation, :class => 'input-text' %>

<br/>
<%= f.radio_button :open_for_play, "true" %>
<%= t(".open_for_play") %><br/>
<%= f.radio_button :open_for_play, "false" %>
<%= t(".close_for_play") %><br/>
<br/>

<%= f.label t(:upload_image) %>
<%= f.file_field :avatar %>

<div class="divider"></div>
<div class="alert-box warning">
  <%= t(:image_notice) %>
</div>

<% if !@user.email_confirmed %>
  <p><%= link_to t(".confirm_email"), validate_email_url %></p>
<% end %>

<%= f.submit t(".create") %>
<% end %>
